<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Vendor Table
                    </header>
                    <%= link_to 'New', new_vendor_path, remote: true,class: 'btn btn-success new_vendor_btn' %>
                    <table class="table table-striped table-advance table-hover table-vendor" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i> Email</th>
                            <th><i class="icon_mail_alt"></i> Mobile</th>
                            <th><i class="icon_mail_alt"></i> Seq No.</th>
                            <th><i class="icon_mail_alt"></i> City name</th>
                            <th><i class="icon_mail_alt"></i> Area name</th>
                            <th><i class="icon_cogs"></i> Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "vendor_data", collection: @vendors_list, as: :vendor %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
