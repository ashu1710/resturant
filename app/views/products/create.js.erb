$('.new_product_btn').removeClass("hide");
$('.panel-body').remove();
<% if @issaved %>
	if($(".table-product tbody tr:first").length == 0){
		var tableProduct = $(".table-product tbody").append("<%= j render(partial: 'product_data', locals: {product: @product}) %>");
	}
	else{
		var tableProduct = $(".table-product tbody tr:first").before("<%= j render(partial: 'product_data', locals: {product: @product}) %>");
	}
	toastr.success('Record Insert Successfully');
<% else %>
	toastr.error('Record not created...');
<% end %>
