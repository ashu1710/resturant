<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Sub-Category Table
                    </header>
                    <%= link_to 'New', new_admins_sub_category_path, remote: true,class: 'btn btn-success new_category_btn' %>
                    <table class="table table-striped table-advance table-sub-category table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i> Category Name</th>
                            <th><i class="icon_profile"></i> Sub-Category Name</th>
                            <th><i class="icon_profile"></i> Sub-Category Image</th>
                            <th><i class="icon_cogs"></i> Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "sub_category_data", collection: @sub_categories, as: :sub_category %> 
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
