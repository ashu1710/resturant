<%= render 'layouts/user_header' %>


<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="page-title">
                    <h2>contact</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <h3 class="formSubmitMessage d-none">We will contact you as soon as possible</h3>
            </div>
            <div class="col-sm-3">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">contact</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->


<!--section start-->
<section class="contact-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <%= form_for(@feedback, remote: true,html: {class: 'theme-form'}) do |f| %>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="name">First Name</label>
                            <%= f.text_field :first_name, class: 'form-control required' %>
                        </div>
                        <div class="col-md-6">
                            <label for="email">Last Name</label>
                            <%= f.text_field :last_name, class: 'form-control required' %>
                        </div>
                        <div class="col-md-6">
                            <label for="review">Phone number</label>
                            <%= f.text_field :mobile, class: 'form-control required' %>
                        </div>
                        <div class="col-md-6">
                            <label for="email">Email</label>
                            <%= f.email_field :email, class: 'form-control required' %>
                        </div>
                        <div class="col-md-12">
                            <label for="review">Write Your Message</label>
                            <%= f.text_area :msg, class: 'form-control', rows: '6' %>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-solid" type="submit">Send Your Message</button>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
<%= render 'layouts/user_footer' %>
