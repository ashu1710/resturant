<div class="panel-body">
    <div class="form">
        <%= form_for notification,remote: :true,html: { class: 'form-validate form-horizontal' } do |f| %>
            <%= f.hidden_field :id %>
            <div class="form-group">
                <label for="cname" class="control-label col-lg-2">Message<span class="required">*</span></label>
                <div class="col-lg-10">
                    <%= f.text_field :msg, autofocus: true, autocomplete: "msg", class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <%= f.submit (f.object.new_record? ? "Save" : "Update"), class: 'btn btn-primary' %>
                    <button class="btn btn-default btn-cancel-new-form" type="button">Cancel</button>
                </div>
            </div>
        <% end %>
    </div>
</div>