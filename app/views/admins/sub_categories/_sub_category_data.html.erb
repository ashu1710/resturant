<tr class="tr_<%= sub_category.id %>">
    <td><%= sub_category.try(:category).try(:name) %></td>
    <td><%= sub_category.name %></td>
    <td><%= image_tag(sub_category.sub_category_image, class: 'product-img') if sub_category.sub_category_image.attached? %></td>
    <td>
        <div class="btn-group">
            <%= link_to edit_admins_sub_category_path(sub_category), remote: true,class: 'btn btn-primary' do %>
            	<i class="icon_pencil"></i>
            <% end %>
            <%= link_to admins_sub_category_path(sub_category), method: :delete, remote: true, class: 'btn btn-danger' do %>
            	<i class="icon_close_alt2"></i>
            <% end %>
        </div>
    </td>
</tr>