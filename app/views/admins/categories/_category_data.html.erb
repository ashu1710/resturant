<tr class="tr_<%= category.id %>">
    <td><%= category.name %></td>
    <td><%= category.category_type.try(:capitalize) %></td>
    <td><%= image_tag(category.category_image, class: 'product-img') if category.category_image.attached? %></td>
    <td>
        <div class="btn-group">
            <%= link_to edit_admins_category_path(category), remote: true,class: 'btn btn-primary' do %>
            	<i class="icon_pencil"></i>
            <% end %>
            <%= link_to admins_category_path(category), method: :delete, remote: true, class: 'btn btn-danger' do %>
            	<i class="icon_close_alt2"></i>
            <% end %>
        </div>
    </td>
</tr>