<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Order Table
                    </header>
                    <table class="table table-striped table-advance table-order table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i>Order Date</th>
                            <th><i class="icon_profile"></i>User mobile No.</th>
                            <th><i class="icon_profile"></i>Order Receive Date</th>
                            <th><i class="icon_profile"></i>Product Name</th>
                            <th><i class="icon_profile"></i>Product Image</th>
                            <th><i class="icon_profile"></i>Status</th>
                            <th><i class="icon_cogs"></i> Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "order_data", collection: @list_orders, as: :order %> 
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
