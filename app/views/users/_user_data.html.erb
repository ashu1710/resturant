<tr class="tr_<%= user.id %>">
    <td><%= user.email %></td>
    <td><%= user.mobile %></td>
    <td>
        <div class="btn-group">
            <%= link_to user_path(user), method: :delete, remote: true, class: 'btn btn-danger' do %>
            	<i class="icon_close_alt2"></i>
            <% end %>
        </div>
    </td>
</tr>