<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Product Table
                    </header>
                <% if current_admin.is_admin? || (!current_admin.is_admin? && current_admin.products.present? && !current_admin.products.first.is_first_product? ) || !current_admin.products.present? %>
                        <%= link_to 'New', new_product_path, remote: true,class: 'btn btn-success new_product_btn' %>
                    <% end %>
                    <table class="table table-striped table-advance table-product table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i>Name</th>
                            <th><i class="icon_profile"></i>Price</th>
                            <th><i class="icon_profile"></i>Image</th>
                            <th><i class="icon_profile"></i> Status </th>
                            <th><i class="icon_cogs"></i> Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "product_data", collection: @list_products, as: :product %> 
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
