<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Size Table
                    </header>
                    <%= link_to 'New', new_size_path, remote: true,class: 'btn btn-success new_banner' %>
                    <table class="table table-striped table-advance table-banner table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i>Size</th>
                            <th><i class="icon_cogs"></i> Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "size_data", collection: @sizes, as: :size %> 
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
