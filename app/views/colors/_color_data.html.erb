<tr class="tr_<%= color.id %>">
    <td>
        <div class="product-img", style= "background-color: <%= color.color_code %>" >
        </div>        <%#= image_tag color.color_image, class: 'product-img' %>
    </td>
    <td>
        <div class="btn-group">
            <%= link_to color_path(color), method: :delete, remote: true, class: 'btn btn-danger' do %>
                <i class="icon_close_alt2"></i>
            <% end %>
        </div>
    </td>
</tr>