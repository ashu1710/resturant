<div style="text-align: center;height: 150px;margin-top: 2%;">
    <a href="#">
        <%= image_tag "img/ar/food_club_logo.png", style: "height: 100%;" %>
    </a>  
</div>
<div class="container">
    <div class="panel panel-default" style="margin: 2% auto;width:50%;">
        <div class="panel-heading text-center" style="padding: 5px;" id="c-heading">Partner Log In</div>
            <div class="panel-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="extra-items"></div>
                    <div class="login-wrap">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon" style="padding: 13px"><i class="icon_profile"></i></span>
                            <%= f.text_field :login,  autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", style: "padding: 21px" %>
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon" style="padding: 13px"><i class="icon_key_alt"></i></span>
                            <%= f.password_field :password, class: "form-control", placeholder: "Password", style: "padding: 21px" %>
                        </div>
                       <% if devise_mapping.rememberable? %>
                            <label class="checkbox">
                                <%= f.check_box :remember_me, value: 'remember-me' %>Remember me
                            </label>
                        <% end %>
                        <div style="margin-top:10px" class="form-group">
                            <%= f.submit "Log in", class: 'btn btn-block business-login-button', style: 'background-color: #2f4050 !important; color: white; font-weight: bolder;padding: 8px 12px;border-radius: 0px;' %>
                        </div>
                        <center> <a href="javascript:;" class="forget_password">Forgot password?</a></center>
                        <%#= link_to "Signup", new_admin_registration_path, class: 'btn btn-info btn-lg btn-block anchor-tag-link' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>    
</div>

<%#= render "admins/shared/links" %>
