            <div class="col-lg-9 order_list">
                <div class="dashboard-right">
                    <div class="dashboard">
                        <div class="page-title">
                            <h2>My Orders</h2>
                        </div>
                        <% if @order.present? %>
                            <table class="table cart-table table-responsive-xs">
                                <thead>
                                <tr>
                                    <td colspan="5" style="text-align: center;font-weight: bold; font-size: 15px;">Bookings</td>
                                </tr>
                                <tr class="table-head">
                                    <th scope="col">Image</th>
                                    <th scope="col">Product name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>
                                </tr>
                                </thead>
                                <% @order.each do |order| %>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%= image_tag order.product.images.first, style: 'width: 100px' %>
                                            </td>
                                            <td><%= order.product.name  %></td>
                                            <td>
                                                <%= "Rs. #{order.product.price}" %>
                                            </td>
                                            <td>
                                                <%= order.is_confirmed.present? ? 'Confirmed' : 'Pending' %>
                                            </td>
                                        </tr>
                                    </tbody>
                                <% end %>
                            </table>
                        <% else %>
                            <div class="welcome-msg">
                                <p>Yet no booking found</p>
                            </div>
                        <% end %>

                        <% if @product_size_color.present? %>
                            <table class="table cart-table table-responsive-xs">
                                <thead>
                                <tr>
                                    <td colspan="5" style="text-align: center;font-weight: bold; font-size: 15px;">Orders</td>
                                </tr>
                                <tr class="table-head">
                                    <th scope="col">Image</th>
                                    <th scope="col">Product name</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>
                                </tr>
                                </thead>
                                <% @product_size_color.each do |order| %>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <%= image_tag order.product.images.first, style: 'width: 100px' %>
                                            </td>
                                            <td><%= order.product.name  %></td>
                                            <td><%= order.qty  %></td>
                                            <td>
                                                <%= "Rs. #{order.product.price}" %>
                                            </td>
                                            <td>
                                                <%= order.order.is_confirmed.present? ? 'Confirmed' : 'Pending' %>
                                            </td>
                                        </tr>
                                    </tbody>
                                <% end %>
                            </table>
                        <% else %>
                            <div class="welcome-msg">
                                <p>Yet no order found</p>
                            </div>
                        <% end %>
                    </div>
                </div>
