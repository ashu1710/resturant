<%= render 'layouts/admin_header' %>
<%= render 'layouts/admin_side_bar' %>
<section id="main-content">
     <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Address Table
                    </header>
                    <table class="table table-striped table-advance table-order table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th><i class="icon_profile"></i>Address</th>
                            <th><i class="icon_profile"></i>City Name</th>
                            <th><i class="icon_profile"></i>Area Name</th>
                            <th><i class="icon_profile"></i>Email Id</th>
                          </tr>
                        </thead>
                        <tbody>
                            <%= render partial: "address_data", collection: @addresses, as: :address %> 
                        </tbody>
                    </table>
                </section>
            </div>
        </div>           
    </section>
</section>
